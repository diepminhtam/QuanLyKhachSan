@model List<QuanLiKhachSan.ViewModels.Admin.ReviewViewModel>
@{
    ViewData["Title"] = "Đánh giá";
    Layout = "_AdminLayout";
}

<div class="admin-reviews">
    <div class="page-header mb-4 d-flex justify-content-between align-items-center">
        <h1 class="h3 mb-0">Đánh giá</h1>
        <a href="/Admin/Reviews/Moderate" class="btn btn-sm btn-primary">Quản lý đánh giá</a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="card">
            <div class="card-body text-center text-muted">
                <i class="fas fa-inbox fa-2x mb-2"></i>
                <p>Không có đánh giá nào.</p>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Khách hàng</th>
                                <th>Phòng</th>
                                <th>Tiêu đề</th>
                                <th>Nội dung</th>
                                <th>Điểm</th>
                                <th>Trạng thái</th>
                                <th>Ngày</th>
                                <th class="text-end">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var r in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <strong>@r.CustomerName</strong>
                                            <small class="text-muted">@r.CustomerEmail</small>
                                        </div>
                                    </td>
                                    <td>@r.RoomName<br /><small class="text-muted">@r.RoomType</small></td>
                                    <td>@r.Title</td>
                                    <td>@r.Comment</td>
                                    <td>@r.Rating</td>
                                    <td><span class="badge bg-secondary">@r.Status</span></td>
                                    <td class="text-end">
                                        <div class="btn-group">
                                            <button class="btn btn-sm btn-success approve-review" data-id="@r.Id">Phê duyệt</button>
                                            <button class="btn btn-sm btn-danger reject-review" data-id="@r.Id">Từ chối</button>
                                        </div>
                                    </td>
                                    <td>@r.CreatedDate.ToString("dd/MM/yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

@section Scripts {
    <script>
        (function(){
            function toast(m){ alert(m); }
            document.addEventListener('click', function(e){
                if(e.target.matches('.approve-review')){
                    var id = e.target.getAttribute('data-id');
                    fetch('/Admin/Reviews/Approve/' + id, { method: 'POST' }).then(r=>r.json()).then(j=>{ if(j.success){ toast(j.message); location.reload(); } });
                }
                if(e.target.matches('.reject-review')){
                    var id = e.target.getAttribute('data-id');
                    fetch('/Admin/Reviews/Reject/' + id, { method: 'POST' }).then(r=>r.json()).then(j=>{ if(j.success){ toast(j.message); location.reload(); } });
                }
            });
        })();
    </script>
}
</div>
