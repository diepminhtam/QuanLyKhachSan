@model QuanLiKhachSan.ViewModels.Admin.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "chờ xác nhận" or "pending" => "bg-warning text-dark",
            "đã xác nhận" or "confirmed" => "bg-primary",
            "hoàn thành" or "completed" => "bg-success",
            "đã hủy" or "cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

<div class="admin-dashboard">
    <!-- Dashboard Header -->
    <div class="dashboard-header mb-4">
        <div class="d-flex align-items-center justify-content-between">
            <h1 class="h3 mb-0">Dashboard</h1>
            <div class="date-range-picker">
                <form method="get" class="d-flex gap-2" id="dashboardFilters">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                        <input type="text" name="start" id="start" class="form-control" value="@(Model.FilterStart?.ToString("dd/MM/yyyy") ?? "")" placeholder="Start" />
                    </div>
                    <div class="input-group">
                        <input type="text" name="end" id="end" class="form-control" value="@(Model.FilterEnd?.ToString("dd/MM/yyyy") ?? "")" placeholder="End" />
                    </div>
                    <select name="status" class="form-select">
                        <option value="">-- Tất cả trạng thái --</option>
                        @foreach(var s in Model.BookingsByStatus.Select(x => x.Key))
                        {
                            if (s == Model.FilterStatus)
                            {
                                <option value="@s" selected>@s</option>
                            }
                            else
                            {
                                <option value="@s">@s</option>
                            }
                        }
                    </select>
                    <select name="sort" class="form-select">
                        <option value="">Mặc định</option>
                        <option value="price_desc">Giá (Lớn → Nhỏ)</option>
                        <option value="price_asc">Giá (Nhỏ → Lớn)</option>
                        <option value="checkin_desc">Nhận phòng (Mới → Cũ)</option>
                        <option value="checkin_asc">Nhận phòng (Cũ → Mới)</option>
                    </select>
                    <button type="submit" class="btn btn-primary">Áp dụng</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Key Metrics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card metric-card h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="metric-title">Doanh thu</h6>
                            <h3 class="metric-value">@Model.TotalRevenue.ToString("N0") VNĐ</h3>
                            <div class="metric-change positive">
                                <i class="fas fa-arrow-up"></i> 12.5% <span class="small">so với tháng trước</span>
                            </div>
                        </div>
                        <div class="metric-icon">
                            <i class="fas fa-money-bill-wave"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card metric-card h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="metric-title">Đặt phòng</h6>
                            <h3 class="metric-value">@Model.TotalBookings</h3>
                            <div class="metric-change positive">
                                <i class="fas fa-arrow-up"></i> 8.3% <span class="small">so với tháng trước</span>
                            </div>
                        </div>
                        <div class="metric-icon">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card metric-card h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="metric-title">Công suất phòng</h6>
                            <h3 class="metric-value">@Model.RoomOccupancyRate.ToString("F1")%</h3>
                            <div class="metric-change negative">
                                <i class="fas fa-arrow-down"></i> 2.1% <span class="small">so với tháng trước</span>
                            </div>
                        </div>
                        <div class="metric-icon">
                            <i class="fas fa-bed"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card metric-card h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="metric-title">Khách hàng mới</h6>
                            <h3 class="metric-value">@Model.TotalCustomers</h3>
                            <div class="metric-change positive">
                                <i class="fas fa-arrow-up"></i> 5.7% <span class="small">so với tháng trước</span>
                            </div>
                        </div>
                        <div class="metric-icon">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row mb-4">
        <div class="col-xl-8 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Doanh thu theo tháng</h5>
                    <div class="card-actions">
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="revenueDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                2023
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="revenueDropdown">
                                <li><a class="dropdown-item" href="#">2023</a></li>
                                <li><a class="dropdown-item" href="#">2022</a></li>
                                <li><a class="dropdown-item" href="#">2021</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <canvas id="revenueChart" height="300"></canvas>
                </div>
            </div>
        </div>

        <div class="col-xl-4 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Loại phòng được đặt</h5>
                    <div class="card-actions">
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="roomTypeDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                Tháng này
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="roomTypeDropdown">
                                <li><a class="dropdown-item" href="#">Tháng này</a></li>
                                <li><a class="dropdown-item" href="#">Quý này</a></li>
                                <li><a class="dropdown-item" href="#">Năm nay</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <canvas id="roomTypeChart" height="300"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Bookings & Availability -->
    <div class="row mb-4">
        <div class="col-xl-8 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Đặt phòng gần đây</h5>
                    <a href="/Admin/Bookings" class="btn btn-sm btn-primary">Xem tất cả</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Mã đặt</th>
                                    <th>Khách hàng</th>
                                    <th>Phòng</th>
                                    <th>Nhận phòng</th>
                                    <th>Trả phòng</th>
                                    <th>Trạng thái</th>
                                    <th>Tổng tiền</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var booking in Model.RecentBookings.Take(10))
                                {
                                    <tr>
                                        <td>@booking.BookingNumber</td>
                                        <td>@booking.CustomerName</td>
                                        <td>@booking.RoomName</td>
                                        <td>@booking.CheckIn.ToString("dd/MM/yyyy")</td>
                                        <td>@booking.CheckOut.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <span class="badge @GetStatusBadgeClass(booking.Status)">@booking.Status</span>
                                        </td>
                                        <td>@booking.TotalPrice.ToString("N0") VNĐ</td>
                                        <td>
                                            <div class="dropdown">
                                                <button class="btn btn-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="fas fa-ellipsis-v"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    <li><a class="dropdown-item" href="#"><i class="fas fa-eye me-2"></i>Chi tiết</a></li>
                                                    <li><a class="dropdown-item" href="#"><i class="fas fa-check-double me-2"></i>Hoàn thành</a></li>
                                                    <li><a class="dropdown-item" href="#"><i class="fas fa-times me-2"></i>Hủy</a></li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        @{ 
                            var total = Model.TotalRecentBookings;
                            var currentPage = Model.Page <= 0 ? 1 : Model.Page;
                            var pageSize = Model.PageSize <= 0 ? 10 : Model.PageSize;
                            var totalPages = (int)Math.Ceiling(total / (double)pageSize);
                            var sortValue = Context.Request.Query["sort"].ToString();
                        }
                        <div>
                            <small class="text-muted">Hiển thị trang @currentPage trên @totalPages (Tổng @total đặt)</small>
                        </div>
                        <nav>
                            <ul class="pagination mb-0">
                                @if (currentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Dashboard","Admin", new { start = Model.FilterStart?.ToString("dd/MM/yyyy"), end = Model.FilterEnd?.ToString("dd/MM/yyyy"), status = Model.FilterStatus, sort = sortValue, page = currentPage - 1, pageSize = pageSize })">Previous</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled"><span class="page-link">Previous</span></li>
                                }

                                @for (var p = 1; p <= totalPages; p++)
                                {
                                    if (p == currentPage)
                                    {
                                        <li class="page-item active"><span class="page-link">@p</span></li>
                                    }
                                    else
                                    {
                                        <li class="page-item"><a class="page-link" href="@Url.Action("Dashboard","Admin", new { start = Model.FilterStart?.ToString("dd/MM/yyyy"), end = Model.FilterEnd?.ToString("dd/MM/yyyy"), status = Model.FilterStatus, sort = sortValue, page = p, pageSize = pageSize })">@p</a></li>
                                    }
                                }

                                @if (currentPage < totalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Dashboard","Admin", new { start = Model.FilterStart?.ToString("dd/MM/yyyy"), end = Model.FilterEnd?.ToString("dd/MM/yyyy"), status = Model.FilterStatus, sort = sortValue, page = currentPage + 1, pageSize = pageSize })">Next</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item disabled"><span class="page-link">Next</span></li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Tình trạng phòng</h5>
                    <a href="/Admin/Rooms" class="btn btn-sm btn-primary">Quản lý phòng</a>
                </div>
                <div class="card-body">
                    <div class="room-status-chart mb-4">
                        <canvas id="roomStatusChart" height="200"></canvas>
                    </div>
                    <div class="room-status-summary">
                        <div class="row">
                            <div class="col-6">
                                <div class="status-item">
                                    <div class="status-icon available">
                                        <i class="fas fa-check-circle"></i>
                                    </div>
                                    <div class="status-details">
                                        <h4>@Model.RoomStatusCounts.Available</h4>
                                        <p>Phòng trống</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="status-item">
                                    <div class="status-icon occupied">
                                        <i class="fas fa-bed"></i>
                                    </div>
                                    <div class="status-details">
                                        <h4>@Model.RoomStatusCounts.Occupied</h4>
                                        <p>Phòng đã đặt</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="status-item">
                                    <div class="status-icon cleaning">
                                        <i class="fas fa-broom"></i>
                                    </div>
                                    <div class="status-details">
                                        <h4>@Model.RoomStatusCounts.Cleaning</h4>
                                        <p>Đang dọn dẹp</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="status-item">
                                    <div class="status-icon maintenance">
                                        <i class="fas fa-tools"></i>
                                    </div>
                                    <div class="status-details">
                                        <h4>@Model.RoomStatusCounts.Maintenance</h4>
                                        <p>Bảo trì</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bottom Row -->
    <div class="row">
        <div class="col-xl-4 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Đánh giá gần đây</h5>
                    <a href="/Admin/Reviews" class="btn btn-sm btn-primary">Xem tất cả</a>
                </div>
                <div class="card-body p-0">
                    <div class="reviews-list">
                        @foreach (var review in Model.RecentReviews.Take(10))
                        {
                            <div class="review-item">
                                <div class="review-header">
                                    <div class="reviewer-info">
                                        <div class="reviewer-avatar">
                                            <span>@review.Initials</span>
                                        </div>
                                        <div>
                                            <h6>@review.CustomerName</h6>
                                            <div class="review-date">@review.CreatedDate.ToString("dd/MM/yyyy")</div>
                                        </div>
                                    </div>
                                    <div class="review-rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= review.Rating)
                                            {
                                                <i class="fas fa-star"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star"></i>
                                            }
                                        }
                                    </div>
                                </div>
                                <div class="review-room">@review.RoomName</div>
                                <div class="review-content">
                                    <p>@review.Comment</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Khách hàng hàng đầu</h5>
                    <a href="/Admin/Customers" class="btn btn-sm btn-primary">Xem tất cả</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Khách hàng</th>
                                    <th>Đặt phòng</th>
                                    <th>Doanh thu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customer in Model.TopCustomers.Take(10))
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="customer-avatar me-2">
                                                    <span>@customer.Initials</span>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">@customer.CustomerName</h6>
                                                    <small class="text-muted">@customer.Email</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@customer.BookingCount</td>
                                        <td>@customer.TotalRevenue.ToString("N0") VNĐ</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">Thông báo gần đây</h5>
                </div>
                <div class="card-body p-0">
                    <div class="notifications-list">
                        @foreach (var notification in Model.Notifications.Take(10))
                        {
                            <a href="#" class="notification-item @(notification.Unread ? "unread" : "")">
                                <div class="notification-icon @notification.BgClass">
                                    <i class="@notification.IconClass"></i>
                                </div>
                                <div class="notification-content">
                                    <div class="notification-title">@notification.Title</div>
                                    <div class="notification-text">@notification.Text</div>
                                    <div class="notification-time">@notification.TimeAgo</div>
                                </div>
                            </a>
                        }
                    </div>
                    <div class="card-footer text-center">
                        <a href="/Admin/Notifications" class="btn btn-sm btn-outline-primary">Xem tất cả thông báo</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize date inputs using daterangepicker (single-date) or fallback to native date inputs
            if (typeof $().daterangepicker === 'function') {
                $('#start').daterangepicker({ singleDatePicker: true, showDropdowns: true, locale: { format: 'DD/MM/YYYY' } });
                $('#end').daterangepicker({ singleDatePicker: true, showDropdowns: true, locale: { format: 'DD/MM/YYYY' } });
            } else {
                try { document.getElementById('start').setAttribute('type','date'); } catch {}
                try { document.getElementById('end').setAttribute('type','date'); } catch {}
            }

            // Prepare chart data from server model
            const revenueLabels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.RevenueByMonth.Select(r => r.Label)));
            const revenueData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.RevenueByMonth.Select(r => r.Value)));

            const revenueCtx = document.getElementById('revenueChart')?.getContext('2d');
            if (revenueCtx) {
                new Chart(revenueCtx, {
                    type: 'bar',
                    data: {
                        labels: revenueLabels,
                        datasets: [{
                            label: 'Doanh thu',
                            data: revenueData,
                            backgroundColor: 'rgba(58,110,165,0.85)'
                        }]
                    },
                    options: {
                        plugins: { legend: { display: false } },
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: { y: { beginAtZero: true, ticks: { callback: v => v.toLocaleString() } } }
                    }
                });
            }

            // Bookings by status chart
            const statusLabels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.BookingsByStatus.Select(x => x.Key)));
            const statusData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.BookingsByStatus.Select(x => x.Value)));
            const roomStatusCtx = document.getElementById('roomStatusChart')?.getContext('2d');
            if (roomStatusCtx) {
                new Chart(roomStatusCtx, {
                    type: 'pie',
                    data: {
                        labels: statusLabels.length ? statusLabels : ['Trống','Đã đặt','Đang dọn dẹp','Bảo trì'],
                        datasets: [{
                            data: statusData.length ? statusData : [Model.RoomStatusCounts.Available, Model.RoomStatusCounts.Occupied, Model.RoomStatusCounts.Cleaning, Model.RoomStatusCounts.Maintenance],
                            backgroundColor: ['rgba(28,200,138,0.8)','rgba(246,194,62,0.8)','rgba(54,185,204,0.8)','rgba(231,74,59,0.8)']
                        }]
                    },
                    options: { responsive: true, maintainAspectRatio: false }
                });
            }

            // Optionally: top rooms table already rendered server-side
        });
    </script>
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
    <link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />
}