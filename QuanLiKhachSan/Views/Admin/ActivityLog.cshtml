@{
    ViewData["Title"] = "Nhật ký hoạt động";
    Layout = "_AdminLayout";
}

<div class="admin-activitylog">
    <div class="page-header mb-4 d-flex justify-content-between align-items-center">
        <h1 class="h3 mb-0">Nhật ký hoạt động</h1>
        <div>
            <button class="btn btn-sm btn-outline-secondary" id="downloadLog">Tải nhật ký</button>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <ul class="activity-timeline list-unstyled mb-0">
                <li class="mb-3">
                    <div class="small text-muted">25/11/2025 15:42:30</div>
                    <div><strong>Admin</strong> đã xác nhận đặt phòng <span class="text-muted">B091-2025</span></div>
                </li>
                <li class="mb-3">
                    <div class="small text-muted">24/11/2025 09:12:01</div>
                    <div><strong>Admin</strong> cập nhật thông tin phòng <span class="text-muted">Deluxe Hướng Biển</span></div>
                </li>
                <li class="mb-3">
                    <div class="small text-muted">23/11/2025 18:03:44</div>
                    <div><strong>System</strong> đã phát hiện 2 giao dịch không hợp lệ</div>
                </li>
            </ul>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a href="/Admin/ActivityLog?page=2" class="btn btn-sm btn-outline-secondary">Xem thêm</a>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('downloadLog')?.addEventListener('click', function(){
            alert('Tải nhật ký (demo)');
        });
    </script>
}
