@{
    ViewData["Title"] = "Báo cáo - Doanh thu";
    Layout = "_AdminLayout";
}

<div class="admin-reports container-fluid">
    <link rel="stylesheet" href="~/css/admin-reports.css" asp-append-version="true" />
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0">Báo cáo doanh thu</h1>
            <small class="text-muted">Biểu đồ doanh thu theo tháng (12 tháng gần nhất).</small>
        </div>
        <div>
            <button id="refreshBtn" class="btn btn-outline-secondary"><i class="fas fa-sync-alt"></i></button>
        </div>
    </div>

    <div class="row gx-4 gy-3 mb-4">
        <div class="col-lg-8">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0">Doanh thu (12 tháng gần nhất)</h5>
                        <small class="text-muted">Cập nhật: <span id="revenueUpdated">—</span></small>
                    </div>
                    <canvas id="revenueChart" height="160"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="mb-3">Tổng quan</h5>
                    <div class="d-flex flex-column gap-3">
                        <div class="d-flex justify-content-between">
                            <small class="text-muted">Tổng doanh thu</small>
                            <div class="fw-bold" id="totalRevenue">—</div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <small class="text-muted">Số đơn</small>
                            <div class="fw-bold" id="totalBookings">—</div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <small class="text-muted">Khách hàng</small>
                            <div class="fw-bold" id="totalCustomers">—</div>
                        </div>
                        <div class="mt-2">
                            <small class="text-muted">Doanh thu trung bình / đơn</small>
                            <div class="h5 mt-1" id="avgPerBooking">—</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        (function(){
            function fmtMoney(n){ return new Intl.NumberFormat('vi-VN').format(n) + ' VNĐ'; }
            let chart;
            const ctx = document.getElementById('revenueChart')?.getContext('2d');
            async function load(){
                try{
                    const res = await fetch('/Admin/Reports/Data');
                    const j = await res.json();
                    const totalRevenue = Number(j.totalRevenue || 0);
                    const totalBookings = Number(j.totalBookings || 0);
                    const totalCustomers = Number(j.totalCustomers || 0);
                    const labels = j.revenueLabels || j.labels || [];
                    const data = (j.revenueValues || j.values || []).map(Number);

                    document.getElementById('totalRevenue').textContent = fmtMoney(totalRevenue);
                    document.getElementById('totalBookings').textContent = totalBookings || '-';
                    document.getElementById('totalCustomers').textContent = totalCustomers || '-';
                    document.getElementById('avgPerBooking').textContent = totalBookings ? fmtMoney(Math.round(totalRevenue/totalBookings)) : '-';
                    document.getElementById('revenueUpdated').textContent = new Date().toLocaleString();

                    if(ctx){
                        if(window._revenueChart) window._revenueChart.destroy();
                        window._revenueChart = new Chart(ctx, {
                            type: 'line',
                            data: { labels, datasets: [{ label:'Doanh thu', data, borderColor:'#405BFF', backgroundColor:'rgba(64,91,255,0.08)', fill:true, tension:0.3 }] },
                            options: { responsive:true, plugins:{legend:{display:false}}, scales:{ y:{ ticks:{ callback: v => new Intl.NumberFormat('vi-VN').format(v) } } } }
                        });
                    }

                }catch(e){ console.error(e); }
            }
            document.getElementById('refreshBtn')?.addEventListener('click', load);
            document.addEventListener('DOMContentLoaded', load);
        })();
    </script>

<!-- Styles loaded inline in the view to avoid nested Razor sections -->
}
