@model QuanLiKhachSan.ViewModels.Admin.UsersViewModel
@{
    ViewData["Title"] = "Quản lý khách hàng";
    Layout = "_AdminLayout";
}

@* Antiforgery token for AJAX POSTs *@
<form id="__antiForgeryForm">@Html.AntiForgeryToken()</form>

@{ 
    var statusVal = Model?.Status ?? string.Empty;
    var userTypeVal = Model?.UserType ?? string.Empty;
    var page = Model?.Page ?? 1;
    var pageSize = Model?.PageSize ?? 10;
    var totalUsers = Model?.TotalUsers ?? 0;
    var totalPages = Model?.TotalPages ?? 1;
    var activeCount = Model?.ActiveCount ?? 0;
    var newCount = Model?.NewCount ?? 0;
    var vipCount = Model?.VipCount ?? 0;
    var inactiveCount = Model?.InactiveCount ?? 0;
    var searchTerm = Model?.SearchTerm ?? string.Empty;
}

<div class="admin-users">
    <div class="page-header mb-4">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <h1 class="h3 mb-0">Quản lý khách hàng</h1>
                <p class="text-muted small mb-0">Quản lý thông tin người dùng, tìm kiếm, lọc và thao tác nhanh.</p>
            </div>
            <div class="page-actions">
                <a class="btn btn-outline-secondary me-2" href="/Admin/Users/Export?format=csv">
                    <i class="fas fa-download me-1"></i> Xuất
                </a>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addUserModal">
                    <i class="fas fa-plus me-1"></i> Thêm khách hàng
                </button>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1">Đang hoạt động</h6>
                        <h4 class="mb-0">@activeCount</h4>
                    </div>
                    <div class="text-muted fs-3"><i class="fas fa-user-check"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1">Mới (30 ngày)</h6>
                        <h4 class="mb-0">@newCount</h4>
                    </div>
                    <div class="text-muted fs-3"><i class="fas fa-user-plus"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1">VIP</h6>
                        <h4 class="mb-0">@vipCount</h4>
                    </div>
                    <div class="text-muted fs-3"><i class="fas fa-crown"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1">Bị khóa</h6>
                        <h4 class="mb-0">@inactiveCount</h4>
                    </div>
                    <div class="text-muted fs-3"><i class="fas fa-user-lock"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form id="filterForm" method="get" class="row g-2 align-items-center">
                <div class="col-md-4">
                    <input name="searchTerm" value="@(searchTerm)" class="form-control" placeholder="Tìm theo tên, email hoặc số điện thoại" />
                </div>
                <div class="col-md-2">
                    <select name="status" class="form-select">
                        <option value="">Tất cả trạng thái</option>
                        @if (statusVal == "active") { <option value="active" selected>Đang hoạt động</option> } else { <option value="active">Đang hoạt động</option> }
                        @if (statusVal == "pending") { <option value="pending" selected>Chưa xác thực</option> } else { <option value="pending">Chưa xác thực</option> }
                        @if (statusVal == "inactive") { <option value="inactive" selected>Bị khóa</option> } else { <option value="inactive">Bị khóa</option> }
                    </select>
                </div>
                <div class="col-md-2">
                    <select name="userType" class="form-select">
                        <option value="">Tất cả loại</option>
                        @if (userTypeVal == "normal") { <option value="normal" selected>Thường</option> } else { <option value="normal">Thường</option> }
                        @if (userTypeVal == "vip") { <option value="vip" selected>VIP</option> } else { <option value="vip">VIP</option> }
                    </select>
                </div>
                <div class="col-md-2">
                    <select name="pageSize" class="form-select" onchange="this.form.submit()">
                        @if (pageSize == 10) { <option value="10" selected>10 / trang</option> } else { <option value="10">10 / trang</option> }
                        @if (pageSize == 25) { <option value="25" selected>25 / trang</option> } else { <option value="25">25 / trang</option> }
                        @if (pageSize == 50) { <option value="50" selected>50 / trang</option> } else { <option value="50">50 / trang</option> }
                        @if (pageSize == 100) { <option value="100" selected>100 / trang</option> } else { <option value="100">100 / trang</option> }
                    </select>
                </div>
                <div class="col-md-2 text-end">
                    <div class="btn-group">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-search me-1"></i> Lọc</button>
                        <a href="/Admin/Users" class="btn btn-outline-secondary">Đặt lại</a>
                    </div>
                </div>
                <input type="hidden" name="page" id="pageInput" value="@(@page)" />
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Danh sách khách hàng</h5>
            <div class="d-flex align-items-center">
                <button class="btn btn-sm btn-outline-secondary me-2" id="refreshBtn"><i class="fas fa-sync-alt"></i></button>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width:36px;">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="selectAll">
                                </div>
                            </th>
                            <th>Khách hàng</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Ngày đăng ký</th>
                            <th class="text-center">Đặt phòng</th>
                            <th class="text-end">Tổng chi tiêu</th>
                            <th>Trạng thái</th>
                            <th>Loại</th>
                            <th class="text-end">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.Users == null || !Model.Users.Any())
                        {
                            <tr>
                                <td colspan="10" class="text-center py-5">
                                    <i class="fas fa-inbox fa-2x text-muted mb-2"></i>
                                    <div class="text-muted">Không tìm thấy khách hàng phù hợp.</div>
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var u in Model.Users)
                            {
                                <tr data-user-id="@u.Id">
                                    <td>
                                        <div class="form-check">
                                            <input class="form-check-input user-checkbox" type="checkbox" value="@u.Id" />
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle me-2">@u.Initials</div>
                                            <div>
                                                <div class="fw-semibold">@u.FullName</div>
                                                <div class="text-muted small">ID: #@u.UserId</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@u.Email</td>
                                    <td>@u.Phone</td>
                                    <td>@u.RegisterDate.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center">@u.BookingsCount</td>
                                    <td class="text-end">@String.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:N0} VNĐ", u.TotalSpending)</td>
                                    <td>
                                        @if (u.Status == "inactive") {
                                            <span class="badge bg-danger">Bị khóa</span>
                                        } else if (u.Status == "pending") {
                                            <span class="badge bg-warning text-dark">Chưa xác thực</span>
                                        } else {
                                            <span class="badge bg-success">Đang hoạt động</span>
                                        }
                                    </td>
                                    <td>
                                        @if (u.UserType == "vip") {
                                            <span class="badge bg-warning">VIP</span>
                                        } else {
                                            <span class="badge bg-secondary">Thường</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group">
                                            <a class="btn btn-sm btn-outline-primary" href="/Admin/Users/Details/@u.Id"><i class="fas fa-eye"></i></a>
                                            <a class="btn btn-sm btn-outline-secondary" href="/Admin/Users/Edit/@u.Id"><i class="fas fa-edit"></i></a>
                                            <button class="btn btn-sm btn-outline-danger lock-user" data-user-id="@u.Id" title="Khóa/Mở khóa"><i class="fas fa-lock"></i></button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer">
            <div class="d-flex justify-content-between align-items-center">
                <div class="small text-muted">Hiển thị <strong>@(((page-1)*pageSize)+1)</strong> - <strong>@(Math.Min(page*pageSize, totalUsers))</strong> trong <strong>@totalUsers</strong> kết quả</div>
                <nav>
                    <ul class="pagination mb-0">
                        <li class="page-item @(page<=1?"disabled":"")">
                            <a class="page-link page-link-nav" href="#" data-page="@(page-1)"><i class="fas fa-angle-left"></i></a>
                        </li>
                        @for (var p = 1; p <= totalPages; p++)
                        {
                            <li class="page-item @(p==page?"active":"")"><a class="page-link page-link-nav" href="#" data-page="@p">@p</a></li>
                        }
                        <li class="page-item @(page>=totalPages?"disabled":"")">
                            <a class="page-link page-link-nav" href="#" data-page="@(page+1)"><i class="fas fa-angle-right"></i></a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <div class="bulk-actions-bar" style="display:none;">
        <div class="container-fluid d-flex align-items-center">
            <div><span class="selected-count">0</span> người dùng đã chọn</div>
            <div class="ms-3">
                <button class="btn btn-sm btn-outline-primary me-2" id="bulkVerify">Xác thực</button>
                <button class="btn btn-sm btn-outline-success me-2" id="bulkActivate">Mở khóa</button>
                <button class="btn btn-sm btn-outline-danger me-2" id="bulkDeactivate">Khóa</button>
            </div>
            <button class="btn btn-sm btn-outline-secondary ms-auto" id="clearSelection">Bỏ chọn</button>
        </div>
    </div>
</div>

@* User Detail Modal (client will populate via AJAX when opening) *@
<div class="modal fade" id="userDetailModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thông tin khách hàng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="userDetailBody">
                <div class="text-center text-muted py-4">Đang tải...</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Đóng</button>
                <a href="#" class="btn btn-primary" id="editUserBtn"><i class="fas fa-edit me-1"></i>Chỉnh sửa</a>
            </div>
        </div>
    </div>
</div>

@* Add/Edit User Modal: keep a simple form (submit handled via AJAX) *@
<div class="modal fade" id="addUserModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm / Chỉnh sửa khách hàng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="userForm">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Họ</label>
                            <input name="lastName" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Tên</label>
                            <input name="firstName" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Email</label>
                            <input name="email" type="email" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Số điện thoại</label>
                            <input name="phone" class="form-control" />
                        </div>
                        <div class="col-12 text-end">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                            <button type="submit" class="btn btn-primary">Lưu</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin-users.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-users.css" asp-append-version="true" />
}