@model IEnumerable<string>
@{
    ViewData["Title"] = "Tin nhắn";
    Layout = "_AdminLayout";
}

<div class="admin-messages">
    <div class="page-header mb-4 d-flex justify-content-between align-items-center">
        <h1 class="h3 mb-0">Tin nhắn</h1>
        <div>
            <a href="/Admin/Messages/Compose" class="btn btn-primary btn-sm">Soạn tin nhắn</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action active">Nguyễn Văn A <div class="small text-muted">— 2 phút trước</div></a>
                <a href="#" class="list-group-item list-group-item-action">Trần Linh <div class="small text-muted">— 3 giờ trước</div></a>
                <a href="#" class="list-group-item list-group-item-action">Phạm Tuấn <div class="small text-muted">— 1 ngày trước</div></a>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="message-thread">
                        <div class="message from-user mb-3">
                            <div class="fw-bold">Nguyễn Văn A <small class="text-muted">— 2 phút trước</small></div>
                            <div>Xin chào, tôi muốn thay đổi giờ nhận phòng.</div>
                        </div>
                        <div class="message from-admin mb-3 text-end">
                            <div class="fw-bold">Bạn <small class="text-muted">— 1 phút trước</small></div>
                            <div>Chúng tôi đã cập nhật yêu cầu của bạn. Cảm ơn!</div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <form class="d-flex" id="replyForm">
                        <input type="text" class="form-control me-2" placeholder="Gõ tin nhắn...">
                        <button class="btn btn-primary">Gửi</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('replyForm')?.addEventListener('submit', function(e){
            e.preventDefault();
            alert('Tin nhắn đã gửi (demo)');
            this.reset();
        });
    </script>
}
