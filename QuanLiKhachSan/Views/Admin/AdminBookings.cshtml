@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <script>
        $(document).ready(function() {
            // Initialize date range picker
            $('#daterange').daterangepicker({
                opens: 'left',
                locale: {
                    format: 'DD/MM/YYYY'
                },
                ranges: {
                   'Hôm nay': [moment(), moment()],
                   'Hôm qua': [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
                   '7 ngày trước': [moment().subtract(6, 'days'), moment()],
                   '30 ngày trước': [moment().subtract(29, 'days'), moment()],
                   'Tháng này': [moment().startOf('month'), moment().endOf('month')],
                   'Tháng trước': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
                }
            });

            // Select all checkboxes
            $('#selectAll').change(function() {
                $('tbody .form-check-input').prop('checked', this.checked);
                updateBulkActionsBar();
            });

            // Individual checkbox change
            $('tbody .form-check-input').change(function() {
                updateBulkActionsBar();
            });

            // Function to update bulk actions bar
            function updateBulkActionsBar() {
                const selectedCount = $('tbody .form-check-input:checked').length;
                if (selectedCount > 0) {
                    $('.selected-count').text(selectedCount);
                    $('.bulk-actions-bar').fadeIn();
                } else {
                    $('.bulk-actions-bar').fadeOut();
                }
            }

            // Clear selection
            $('#clearSelection').click(function() {
                $('tbody .form-check-input').prop('checked', false);
                $('#selectAll').prop('checked', false);
                updateBulkActionsBar();
            });

            // Initialize action buttons (per-row)
            function getBadgeClassForStatus(status){
                if(!status) return 'bg-secondary';
                status = status.toLowerCase();
                if(status.includes('chờ') || status.includes('pending')) return 'bg-warning text-dark';
                if(status.includes('đã xác nhận') || status.includes('confirmed')) return 'bg-primary';
                if(status.includes('hoàn thành') || status.includes('completed')) return 'bg-success';
                if(status.includes('đã hủy') || status.includes('cancelled') || status.includes('hủy')) return 'bg-danger';
                return 'bg-secondary';
            }

            function adjustCounts(oldStatus, newStatus){
                function change(cardClass, delta){
                    const el = $('.status-card.'+cardClass+' .status-value');
                    if(!el.length) return;
                    const v = parseInt(el.text()||'0') + delta;
                    el.text(Math.max(0,v));
                }

                const map = (s)=>{ if(!s) return null; s=s.toLowerCase(); if(s.includes('chờ')) return 'pending'; if(s.includes('đã xác nhận')||s.includes('confirmed')) return 'confirmed'; if(s.includes('hoàn thành')||s.includes('completed')) return 'completed'; if(s.includes('đã hủy')||s.includes('hủy')) return 'cancelled'; return null; };

                const o = map(oldStatus); const n = map(newStatus);
                if(o && o!==n) change(o, -1);
                if(n && o!==n) change(n, 1);
            }

            function updateRowStatus(id, newStatus){
                const cb = $(`.booking-checkbox[value="${id}"]`);
                if(!cb.length) return;
                const tr = cb.closest('tr');
                const statusTd = tr.find('td').eq(8);
                const oldStatus = statusTd.text().trim();
                const badgeClass = getBadgeClassForStatus(newStatus);
                statusTd.html(`<span class="badge ${badgeClass} booking-status-badge">${newStatus}</span>`);
                // uncheck
                cb.prop('checked', false);
                updateBulkActionsBar();
                adjustCounts(oldStatus, newStatus);
            }

            $('.confirm-action').click(function(e) {
                e.preventDefault();
                const id = $(this).data('id');
                if (!id) return;
                if (!confirm('Xác nhận đơn đặt phòng này?')) return;
                fetch('/Admin/ConfirmBooking/' + id, { method: 'POST' })
                    .then(r => r.json())
                    .then(data => {
                        if (data.success) {
                            alert(data.message);
                            if(data.bookingId && data.newStatus) updateRowStatus(data.bookingId, data.newStatus);
                        } else alert(data.message || 'Lỗi');
                    })
                    .catch(err => alert('Lỗi: ' + err));
            });

            $('.cancel-action').click(function(e) {
                e.preventDefault();
                const id = $(this).data('id');
                if (!id) return;
                if (!confirm('Hủy đơn đặt phòng này?')) return;
                fetch('/Admin/CancelBooking/' + id, { method: 'POST' })
                    .then(r => r.json())
                    .then(data => {
                        if (data.success) {
                            alert(data.message);
                            if(data.bookingId && data.newStatus) updateRowStatus(data.bookingId, data.newStatus);
                        } else alert(data.message || 'Lỗi');
                    })
                    .catch(err => alert('Lỗi: ' + err));
            });

            // Bulk actions (confirm/cancel)
            function getSelectedIds(){
                return $('.booking-checkbox:checked').map(function(){ return parseInt(this.value); }).get();
            }

            $('#bulkConfirm').click(function(){
                const ids = getSelectedIds();
                if (!ids.length) { alert('Vui lòng chọn ít nhất một đơn.'); return; }
                if (!confirm(`Xác nhận ${ids.length} đơn đã chọn?`)) return;
                fetch('/Admin/BulkConfirm', {
                    method: 'POST', headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(ids)
                }).then(r=>r.json())
                .then(data=>{
                    if(data.success){
                        alert(data.message);
                        if(Array.isArray(data.updatedIds) && data.newStatus){
                            data.updatedIds.forEach(function(id){ updateRowStatus(id, data.newStatus); });
                        }
                    } else alert(data.message||'Lỗi');
                })
                .catch(err=>alert('Lỗi: '+err));
            });

            $('#bulkCancel').click(function(){
                const ids = getSelectedIds();
                if (!ids.length) { alert('Vui lòng chọn ít nhất một đơn.'); return; }
                if (!confirm(`Hủy ${ids.length} đơn đã chọn?`)) return;
                fetch('/Admin/BulkCancel', {
                    method: 'POST', headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(ids)
                }).then(r=>r.json())
                .then(data=>{
                    if(data.success){
                        alert(data.message);
                        if(Array.isArray(data.updatedIds) && data.newStatus){
                            data.updatedIds.forEach(function(id){ updateRowStatus(id, data.newStatus); });
                        }
                    } else alert(data.message||'Lỗi');
                })
                .catch(err=>alert('Lỗi: '+err));
            });

            // Filter by status
            $('.view-all-link').click(function(e) {
                e.preventDefault();
                const status = $(this).data('status');
                $('select[name="status"]').val(status);
                // Submit form or trigger search
                $('#bookingSearchForm').submit();
            });
        });
    </script>
