            </div>
            <div class="modal-body">
                <p id="confirmationMessage">Bạn có chắc chắn muốn thực hiện thao tác này?</p>
                <div class="alert alert-warning d-none" id="warningMessage">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <span>Cảnh báo: Thao tác này không thể hoàn tác.</span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="confirmAction">Xác nhận</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <script>
        $(document).ready(function() {
            // Initialize date range picker
            $('#daterange').daterangepicker({
                opens: 'left',
                locale: {
                    format: 'DD/MM/YYYY'
                },
                ranges: {
                   'Hôm nay': [moment(), moment()],
                   'Hôm qua': [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
                   '7 ngày trước': [moment().subtract(6, 'days'), moment()],
                   '30 ngày trước': [moment().subtract(29, 'days'), moment()],
                   'Tháng này': [moment().startOf('month'), moment().endOf('month')],
                   'Tháng trước': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
                }
            });

            // Select all checkboxes
            $('#selectAll').change(function() {
                $('tbody .form-check-input').prop('checked', this.checked);
                updateBulkActionsBar();
            });

            // Individual checkbox change
            $('tbody .form-check-input').change(function() {
                updateBulkActionsBar();
            });

            // Function to update bulk actions bar
            function updateBulkActionsBar() {
                const selectedCount = $('tbody .form-check-input:checked').length;
                if (selectedCount > 0) {
                    $('.selected-count').text(selectedCount);
                    $('.bulk-actions-bar').fadeIn();
                } else {
                    $('.bulk-actions-bar').fadeOut();
                }
            }

            // Clear selection
            $('#clearSelection').click(function() {
                $('tbody .form-check-input').prop('checked', false);
                $('#selectAll').prop('checked', false);
                updateBulkActionsBar();
            });

            // Initialize action buttons
            $('.confirm-action, .complete-action, .cancel-action').click(function(e) {
                e.preventDefault();
                let action = '';
                let btnClass = '';

                if ($(this).hasClass('confirm-action')) {
                    action = 'xác nhận';
                    btnClass = 'btn-primary';
                    $('#warningMessage').addClass('d-none');
                } else if ($(this).hasClass('complete-action')) {
                    action = 'hoàn thành';
                    btnClass = 'btn-success';
                    $('#warningMessage').addClass('d-none');
                } else if ($(this).hasClass('cancel-action')) {
                    action = 'hủy';
                    btnClass = 'btn-danger';
                    $('#warningMessage').removeClass('d-none');
                }

                $('#confirmationMessage').text(`Bạn có chắc chắn muốn ${action} đơn đặt phòng này?`);
                $('#confirmAction').removeClass('btn-primary btn-success btn-danger').addClass(btnClass);

                $('#confirmationModal').modal('show');
            });

            // Bulk actions
            $('#bulkConfirm, #bulkComplete, #bulkCancel').click(function() {
                let action = '';
                let btnClass = '';

                if ($(this).attr('id') === 'bulkConfirm') {
                    action = 'xác nhận';
                    btnClass = 'btn-primary';
                    $('#warningMessage').addClass('d-none');
                } else if ($(this).attr('id') === 'bulkComplete') {
                    action = 'hoàn thành';
                    btnClass = 'btn-success';
                    $('#warningMessage').addClass('d-none');
                } else if ($(this).attr('id') === 'bulkCancel') {
                    action = 'hủy';
                    btnClass = 'btn-danger';
                    $('#warningMessage').removeClass('d-none');
                }

                const selectedCount = $('tbody .form-check-input:checked').length;
                $('#confirmationMessage').text(`Bạn có chắc chắn muốn ${action} ${selectedCount} đơn đặt phòng đã chọn?`);
                $('#confirmAction').removeClass('btn-primary btn-success btn-danger').addClass(btnClass);

                $('#confirmationModal').modal('show');
            });

            // Filter by status
            $('.view-all-link').click(function(e) {
                e.preventDefault();
                const status = $(this).data('status');
                $('select[name="status"]').val(status);
                // Submit form or trigger search
                $('#bookingSearchForm').submit();
            });
        });
    </script>
}

